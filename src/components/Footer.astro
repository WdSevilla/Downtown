<style>
  .slider-wrapper {
  display: flex;
  overflow: hidden;
  white-space: nowrap;
}

.slider {
  display: flex;
  gap: 3rem; /* Espacio entre imágenes */
  animation: scroll 5s linear infinite;
}

.image {
  width: 120px;
  height: 120px;
  flex-shrink: 0;
}

@keyframes scroll {
  from {
    transform: translateX(0%);
  }
  to {
    transform: translateX(-50%); /* Mueve solo la mitad */
  }
}

.slider:hover {
  animation-play-state: paused;
}

</style>

